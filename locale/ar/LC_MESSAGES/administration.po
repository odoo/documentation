msgid "Google Chrome"
msgstr "Google Chrome"

#: ../../content/administration/install/deploy.rst:754
msgid "Mozilla Firefox"
msgstr "Mozilla Firefox"

#: ../../content/administration/install/deploy.rst:755
msgid "Microsoft Edge"
msgstr "Microsoft Edge"

